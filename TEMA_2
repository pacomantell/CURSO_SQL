/*SENTENCIAS DML (DATA MANIPULATION LANGUAGE)*/

-- 1. CONSULTAS O RECUPERACION DE DATOS (CONSULTAS SENCILLAS)

SELECT * FROM EJEMPLO; --TODAS LAS COLUMNAS

SELECT ID FROM EJEMPLO; --UNA COLUMNA ESPECIFICA

SELECT ID, NAME, EMAIL FROM EJEMPLO; --VARIAS COLUMNAS

--FILTRAR FILAS

SELECT * FROM EJEMPLO WHERE ID = 1; --FILTRO FILAS POR EL ID

SELECT * FROM EJEMPLO WHERE SALARY > 1000; --FILTRO FILAS SEGUN EL SALARIO

SELECT * FROM EJEMPLO WHERE ID=2 AND SALARY > 1000 AND NAME='PALOMINO CASARES';/*FILTRO SEGUN VARIAS
                                                                               CONDICIONES MEDIANTE SENTENCIAS DE
                                                                               CONTROL (AND, OR , NOT,...)*/
--2. INSERCION DE DATOS (CREAR NUEVOS REGISTROS)

INSERT INTO EJEMPLO (NAME, EMAIL) VALUES ('ARTURO HUEVODURO', 'ARTURITO@EMAIL.COM');

INSERT INTO EJEMPLO (NAME, EMAIL, CASADO, SALARY) 
VALUES('ANTONIO MARTIN', 'ANTONIO@EMAIL.COM', TRUE, 15000.20);

/*CON EL METODO INSERT NO ES POSIBLE EDITAR UN REGISTRO EXISTENTE, SOLO SE PUEDEN CREAR NUEVAS ENTRADAS (FILAS)
EN LA TABLA*/

--CREO NUEVA ENTRADA Y PIDO QUE ME MUESTRE CIERTO DATO (EL ID, QUE SE GENERA SOLO)

INSERT INTO EJEMPLO (NAME, EMAIL, SALARY, TIEMPO)
VALUES ('KUKA LAGARRA', 'KUKIKUKA@LAGARRA.COM', 123456.789, '12:20:21') RETURNING ID;

--3. ACTUALIZAR O EDITAR DATOS (EDITAR REGISTROS EXISTENTES)

--CAMBIO LOS DATOS DE UNA COLUMNA DE UN REGISTRO

UPDATE EJEMPLO SET BIRTH_DATE = '2015-12-21' WHERE ID=5; 

UPDATE EJEMPLO SET BIRTH_DATE = NULL WHERE ID=7; --PUEDO CREAR REGISTROS NULOS

UPDATE EJEMPLO SET CASADO = FALSE WHERE NAME = 'PALOMINO CASARES';

--CAMBIO VARIOS VALORES DE UN REGISTRO

UPDATE EJEMPLO SET CASADO=TRUE, TIEMPO='09:00:00' WHERE EMAIL='MANOLO@EMAIL.COM'; 

/*SI NO HAY NADA QUE CAMBIAR NO SALTARA ERROR, PERO NO CAMBIARA NADA*/

--4. BORRAR REGISTROS O DATOS DE ALGUN REGISTRO

DELETE FROM EJEMPLO; --BORRO TODOS LOS REGISTROS DE LA TABLA

DELETE FROM EJEMPLO WHERE ID=6; --BORRO UN REGISTRO EN BASE A UN FILTRO (EL ID)

DELETE FROM EJEMPLO WHERE SALARY IS NULL; --FILTRO ESPECIAL PARA REGISTROS NULOS

DELETE FROM EJEMPLO WHERE SALARY IS NOT NULL;
